# =================================
# Strapi Environment Variables
# =================================

# Node environment
NODE_ENV=development

# =================================
# Server Configuration
# =================================
HOST=0.0.0.0
PORT=1337

# =================================
# Secrets (Generate with: openssl rand -base64 32)
# =================================
APP_KEYS=your-app-keys-here
API_TOKEN_SALT=your-api-token-salt-here
ADMIN_JWT_SECRET=your-admin-jwt-secret-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here
JWT_SECRET=your-jwt-secret-here

# =================================
# Database Configuration
# =================================
# For development (local PostgreSQL)
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi
DATABASE_SSL=false

# For production (RDS)
# DATABASE_CLIENT=postgres
# DATABASE_URL=postgresql://user:password@rds-endpoint.us-east-1.rds.amazonaws.com:5432/strapi
# DATABASE_SSL_REJECT_UNAUTHORIZED=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000

# =================================
# AWS S3 Configuration (Production)
# =================================
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here
AWS_REGION=us-east-1
AWS_BUCKET=strapi-media-uploads
AWS_S3_ROOT_PATH=uploads
AWS_ACL=private
CDN_URL=https://assets.gruposer.com.br

# =================================
# Next.js Revalidation Webhook
# =================================
NEXT_REVALIDATION_URL=https://unama.com.br/api/revalidate
REVALIDATION_SECRET=your-revalidation-secret-here

# =================================
# Auth0 SSO (Optional)
# =================================
# AUTH0_CLIENT_ID=your-client-id
# AUTH0_CLIENT_SECRET=your-client-secret
# AUTH0_DOMAIN=gruposer.auth0.com

# =================================
# Admin Configuration
# =================================
ADMIN_PATH=/admin

# =================================
# CORS Configuration
# =================================
# CORS_ENABLED=true
# CORS_ORIGIN=https://unama.com.br,https://uninassau.com.br
