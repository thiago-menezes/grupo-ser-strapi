{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Curso / Detalhes",
    "description": "Academic courses offered by institutions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nome": {
      "type": "string",
      "required": true
    },
    "sobre": {
      "type": "richtext"
    },
    "metodologia": {
      "type": "richtext"
    },
    "id_do_curso": {
      "type": "string"
    },
    "capa": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "instituicao": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::institution.institution",
      "inversedBy": "cursos"
    },
    "grade_curricular": {
      "type": "richtext"
    },
    "certificado": {
      "type": "richtext"
    },
    "duracao": {
      "type": "integer",
      "required": true
    },
    "carga_horaria": {
      "type": "integer"
    },
    "unidades": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::unit.unit",
      "mappedBy": "curso_detalhes"
    },
    "curso_corpo_docentes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::corpo-docente.corpo-docente",
      "inversedBy": "cursos"
    },
    "projeto_pedagogico": {
      "type": "richtext"
    },
    "destaque": {
      "type": "boolean"
    }
  }
}
